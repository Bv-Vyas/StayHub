<% layout('/layouts/boilerplate') %>
<p class="text-secondary text-center mt-2">Showing Results For "<%= searchPlace %>"</p>
<div class="container mt-3">
  <% for(list of searchedListings){ %>
    <div class="card mb-3 mt-3 ms-auto me-auto" style="max-width: 840px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= list.image.url %>" class="img-fluid rounded-start" alt="Listing Image">
          </div>
          <div class="col-md-8">
            <div class="card-body py-1 px-2">
              <h5 class="card-title"><b><%= list.title %></b></h5>
              <p class="card-text"><%= list.location %></p>
              <p class="card-text"><small class="text-body-secondary"><%= list.price %> &#8377;</small></p>
              <a href="/listings/<%= list._id  %>" class="card-link"><button class="btn btn-outline-danger" style="width: 150px; font-weight: bold;">View</button></a>
            </div>
          </div>
        </div>
    </div>
  <% } %>
</div>
